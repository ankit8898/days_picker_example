<h1 class="subheader">Example 1</h1>
<%= form_for DaysPicker.new, url: {action: "create"},html: {class: 'custom'}, remote: true do |f| %>
  <div class="row">
    <div class="large-4 columns">
      <label for="customDropdown1">Select a Day Type</label>
      <%= f.select :type, %w(Sundays Mondays Tuesdays Wednesdays Thursdays Fridays Saturdays Weekdays) ,class: 'medium', id: 'customDropdown1' %>
      <%= f.submit 'Get Dates',class: "medium button" %>  
    </div>
       <div class="large-4 columns">
      <label for="customDropdown1">Select a Month</label>
      <%= select_month(Date.today,:field_name => 'month',class: 'medium', id: 'customDropdown1') %>  
    </div>
       <div class="large-4 columns">
      <label for="customDropdown1">Select a Year</label>
      <%= f.select :year, 2013..2050,class: 'medium', id: 'customDropdown1' %>
    </div>
    
  </div>
<% end %>
